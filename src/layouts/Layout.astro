---
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Professional design services portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/design/favicon.png" />
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[#101010] text-[#f2f2f2]">
		<Header />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 37, 99, 235;
		--accent-light: 96, 165, 250;
		--accent-dark: 30, 58, 138;
	}
</style>