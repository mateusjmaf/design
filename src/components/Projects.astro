---
import '../styles/glassmorphism.css';

interface Project {
  title: string;
  description: string;
  image: string;
  tags: string[];
}

const projects: Project[] = [
  {
    title: "Otimização de Formulários",
    description: "Criação de uma ferramenta para configurar interfaces de rotinas do ERP.",
    image: "/design/projects-form-otimization.jpeg",
    tags: ["UI/UX", "Usabilidade", "Wizard"]
  },
  {
    title: "Digital Trusted Advisor",
    description: "Uma interface de conversação entre uma IA e usuários do sistema ERP.",
    image: "/design/projects-dta.jpeg",
    tags: ["IA", "Chat", "IHC"]
  },
  {
    title: "Super App",
    description: "Conversão de quatro aplicativos do setor de backoffice em um único produto.",
    image: "/design/projects-super-app.jpeg",
    tags: ["Mobile", "Arquitetura da Informação"]
  },
];
---
<section id="projects" class="py-20">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-4xl font-bold mb-12">Projetos em destaque</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <div class="bg-[#f2f2f2]/5 hover:bg-[#f2f2f2]/10 transition-colors duration-300 rounded-lg overflow-hidden">
          <img 
            src={project.image} 
            alt={project.title}
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">{project.title}</h3>
            <p class="text-[#f2f2f2]/80 mb-4">{project.description}</p>
            <div class="flex gap-2">
              {project.tags.map(tag => (
                <span class="bg-[#f2f2f2]/10 px-3 py-1 rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>