---
interface Props {
  href?: string;
  type?: "button" | "submit";
  className?: string;
  variant?: "solid" | "outline";
}

const { 
  href, 
  type = "button", 
  className = "", 
  variant = "solid" 
} = Astro.props;

const baseStyles = "px-6 py-2 rounded-full transition-colors";
const variants = {
  solid: "bg-[#f2f2f226] text-[#f2f2f2] hover:bg-[#f2f2f2]/20",
  outline: "border border-[#f2f2f226] text-[#f2f2f2] hover:bg-[#f2f2f2]/10"
};

const Element = href ? "a" : "button";
---

<Element
  {...href ? { href } : { type }}
  class:list={[baseStyles, variants[variant], className]}
>
  <slot />
</Element>