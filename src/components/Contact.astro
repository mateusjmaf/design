---
import '../styles/glassmorphism.css';
import Button from './ui/Button.astro';
import '../styles/contact.css';
---
<section id="contact" class="py-20">
  <div class="max-w-4xl mx-auto px-6">
    <h2 class="text-4xl font-bold mb-4">Get in touch</h2>
    
    <p class="text-xl mb-8 mx-auto">
      Available for questions, collabs, projects & coffees.
    </p>

    <div class="glass rounded-lg p-8 contact-card">
      <form class="space-y-6" action="https://formspree.io/f/xkgjkqbb" method="POST">
        <div>
          <label for="name" class="block mb-2">Name</label>
          <input
            placeholder="Enter your name..."
            type="text"
            id="name"
            name="name"
            class="w-full px-4 py-2 border rounded-full bg-[#f2f2f2]/10 border-[#f2f2f2]/20 focus:ring-2 focus:ring-[#f2f2f2]/30"
            required
          />
        </div>
        <div>
          <label for="email" class="block mb-2">Email</label>
          <input
            placeholder="Enter your email..."
            type="email"
            id="email"
            name="email"
            class="w-full px-4 py-2 border rounded-full bg-[#f2f2f2]/10 border-[#f2f2f2]/20 focus:ring-2 focus:ring-[#f2f2f2]/30"
            required
          />
        </div>
        <div>
          <label for="message" class="block mb-2">Message</label>
          <textarea
            placeholder="Enter your message..."
            id="message"
            name="message"
            rows="4"
            class="w-full px-4 py-2 border rounded-3xl bg-[#f2f2f2]/10 border-[#f2f2f2]/20 focus:ring-2 focus:ring-[#f2f2f2]/30"
            required
          ></textarea>
        </div>
        <Button type="submit" className="w-full">
          Submit
        </Button>
      </form>
    </div>
  </div>

  <div class="contact-container px-6">
    <a class="contact-button" href="https://www.linkedin.com/in/mateusjmaf/" target="_blank">
      <img
        role=button
        src="/design/linkedin-logo.png"
        alt="Profile"
        class="contact-logo"
        />
    </a>
    <a class="contact-button" href="http://medium.com/@mateusjmaf" target="_blank">
      <img
        role=button
        src="/design/medium-logo.png"
        alt="Profile" 
        class="contact-logo"
        />
    </a>
  </div>
</section>