---
import '../styles/glassmorphism.css';
import Button from './ui/Button.astro';
---
<section id="contact" class="py-20">
  <div class="max-w-4xl mx-auto px-6">
    <h2 class="text-4xl font-bold mb-8">Entre em Contato</h2>
    <div class="glass rounded-lg p-8 bg-[#f2f2f2]/5">
      <form class="space-y-6">
        <div>
          <label for="name" class="block mb-2">Nome</label>
          <input
            type="text"
            id="name"
            name="name"
            class="w-full px-4 py-2 border rounded-full bg-[#f2f2f2]/10 border-[#f2f2f2]/20 focus:ring-2 focus:ring-[#f2f2f2]/30"
            required
          />
        </div>
        <div>
          <label for="email" class="block mb-2">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="w-full px-4 py-2 border rounded-full bg-[#f2f2f2]/10 border-[#f2f2f2]/20 focus:ring-2 focus:ring-[#f2f2f2]/30"
            required
          />
        </div>
        <div>
          <label for="message" class="block mb-2">Mensagem</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            class="w-full px-4 py-2 border rounded-3xl bg-[#f2f2f2]/10 border-[#f2f2f2]/20 focus:ring-2 focus:ring-[#f2f2f2]/30"
            required
          ></textarea>
        </div>
        <Button type="submit" className="w-full">
          Enviar mensagem
        </Button>
      </form>
    </div>
  </div>
</section>